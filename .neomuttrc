####################################################

# Credentials
set imap_user = "ben@benfedoruk.com"
set smtp_url = "smtp://ben@benfedoruk.com:465"
source "gpg -d ~/.mutt/passwords.gpg |"

# Editing Preferences
set editor = "vim"
set edit_headers = yes
set charset = UTF-8

# Personal Information
set realname = "Benjamin D. Fedoruk"
set from = "ben@benfedoruk.com"
